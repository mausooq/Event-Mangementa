<%- include('../partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Event</title>
    <link rel="stylesheet" href="/css/edit.css"></head>

</head>
<body>
    <div class="container">
        <h1>Edit Event</h1>
        <form action="/events/<%= event._id %>?_method=PUT" method="POST">
            <label for="title">Title:</label>
            <input type="text" name="title" id="title" value="<%= event.title %>" required>

            <label for="date">Date:</label>
            <input type="date" name="date" id="date" value="<%= event.date.toISOString().split('T')[0] %>" required>

            <label for="reminder">Reminder:</label>
            <input type="checkbox" name="reminder" id="reminder" <%= event.reminder ? 'checked' : '' %>><label for="reminder">Set a reminder</label>

            <button type="submit">Update Event</button>
        </form>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>
